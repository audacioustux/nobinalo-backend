
datasource db {
    provider = "postgres"
    url      = env(DB_URL)
}

generator photon {
    provider = "photonjs"
    output   = "node_modules/@generated/photon"
}

model User {
    id     String  @default(cuid()) @id
    email  String  @unique
    name   String?
    avatar Boolean
    posts  Post[]
}

model Post {
    id        String  @default(cuid()) @id
    published Boolean
    title     String
    content   String?
    author    User?
}