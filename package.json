{
  "name": "server",
  "version": "1.0.0",
  "description": "nobinalo.com backend",
  "private": true,
  "main": "./build/index.js",
  "scripts": {
    "build": "npm run build-ts && npm run eslint && npm run copy-static-assets",
    "build-watch": "npx babel src --watch --out-dir build",
    "start-build": "npm run build && node ./build",
    "start": "npm run serve",
    "dev": "NODE_ENV=development USER=tanjim nodemon --require @babel/register ./src",
    "prod": "NODE_ENV=production npm run start-build",
    "test": "jest --forceExit --coverage --verbose",
    "seed": "npx sequelize db:seed:all",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "author": {
    "name": "Tanjim Hosain",
    "email": "audacioustux@protonmail.com"
  },
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^15.0.3",
    "@types/hashids": "^1.0.30",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/nodemailer": "^6.2.0",
    "@types/redis": "^2.8.13",
    "@types/validator": "^10.11.0",
    "apollo-server-express": "^2.4.8",
    "argon2": "^0.20.1",
    "chalk": "^2.4.2",
    "connect-redis": "^3.4.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "googleapis": "^37.2.0",
    "graphql": "^14.1.1",
    "graphql-playground-middleware-express": "^1.7.12",
    "graphql-shield": "^5.1.2",
    "graphql-tools": "^4.0.4",
    "hashids": "^1.2.2",
    "jsonwebtoken": "^8.5.0",
    "lodash": "^4.17.11",
    "morgan": "^1.9.1",
    "node-cron": "^2.0.3",
    "nodemailer": "^5.1.1",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.2",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^4.42.0",
    "sequelize-cli": "^5.4.0",
    "ts-node": "^8.2.0",
    "typeorm": "^0.2.17",
    "uuid": "^3.3.2",
    "validator": "^10.11.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.16.1",
    "@types/graphql": "^14.2.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^12.0.4",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "concurrently": "^4.1.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-prettier": "^3.1.0",
    "gulp": "^4.0.0",
    "gulp-rename": "^1.4.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.17.1",
    "typescript": "^3.6.0-dev.20190530"
  }
}
