{
  "delay": 0,
  "verbose": true,
  "watch": [
    "src"
  ],
  "ignore": [
    "**/*.spec.ts",
    "**/*.test.ts",
    ".git",
    "node_modules/**/node_modules"
  ],
  "env": {
    "NODE_ENV": "development",
    "nodemon": true,
    "PORT": 4000,
    "DEBUG": "*"
  },
  "exec": "npm run build && npm start",
  "ext": "js,json,ts"
}